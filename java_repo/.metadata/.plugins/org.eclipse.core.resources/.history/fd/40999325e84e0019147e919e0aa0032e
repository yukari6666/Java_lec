package tst9;

import java.util.Arrays;
import java.util.Scanner;

public class arrays {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		Scanner scanner2 = new Scanner(System.in);
		System.out.println("만들 배열의 길이를 선택해주세요. 추천: 3");
		int inputuser = scanner.nextInt();
		int[][] arr = new int[inputuser + 1][inputuser + 1];
		int j = 0;
		for (int i = 0; i < arr.length - 1; i++) {
			System.out.println(" ");
			for (j = 0; j < arr.length - 1; j++) {
				System.out.print(arr[i][j] + " ");
			}
		}
		System.out.println(" ");

		for (int a = 0; a < inputuser; a++) {
			for (int b = 0; b < inputuser; b++) {
				int inputuser2 = scanner2.nextInt();
				arr[a][b] = inputuser2;
			}
		}
		int sum = 0;
		int sum2 = 0;
		for (int c = 0; c < arr.length; c++) {
			System.out.println(" ");
			for (int d = 0; d < arr.length; d++) {
				sum = sum + arr[3][d];
				sum2 = sum2 + arr[c][3];
				System.out.print(arr[c][d]);
			}
		}
		System.out.print(sum+sum2);


//		for (int e = 0; e < arr.length; e++) {
//			for (int f = 0; f < arr.length; f++) {
////				sum = sum + arr[3][f];
////				sum2 = sum2 + arr[e][3];
//			}
//			System.out.println(" ");
//		}
//		System.out.println(" ");

	}
}
